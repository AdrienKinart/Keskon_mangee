<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choice_recipe_consult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ExtraText">


        <TextView
            android:id="@+id/match_recipes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Les recettes correpondant à la recherche"></TextView>


        <ListView
            android:id="@+id/list_recipes"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/plus1_recipes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Les recettes avec un ingrédient en plus"></TextView>


        <ListView
            android:id="@+id/list_recipe_plus1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/plus2_recipes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Les recettes avec deux ingrédient en plus"></TextView>


        <ListView
            android:id="@+id/list_recipe_plus2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:visibility="visible" />

    </LinearLayout>

</ScrollView>